<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deletar Alimento</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">    
    <link rel="stylesheet" href="css/adicionar_filme.css">
</head>
<body>
    <div class="container">
        <h1>Deletar Alimento</h1>
        <form action="/deletar_alimento" method="POST">
            <label for="id_atual">Selecione o Alimento para Deletar:</label>
            <select id="id_atual" name="id_atual" required>
                <option value="">-- Selecione um alimento --</option>
                {{#each alimentos}}
                    <option value="{{this.id}}">{{this.nome}}</option>
                {{/each}}
            </select>
            <button type="submit">Excluir Alimento</button>
        </form>
         {{#if success_msg}}
            <div style="color: green; font-weight: bold;">
                {{success_msg}}
                <br><br><br>
            </div>
        {{/if}}

        {{#if error_msg}}
            <div style="color: red; font-weight: bold;">
                {{error_msg}}
                <br><br><br>
            </div>
        {{/if}}
    </div>
</body>
