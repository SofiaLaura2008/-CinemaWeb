<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/adicionar_filme.css">
    <title>Atualizar Sala</title>
</head>
<body>
    <div class="container">
        <h1>Atualizar Sala</h1>
        <form action="/atualizar_sala" method="POST">
            <label for="id_atual">Selecione a Sala:</label>
            <select name="id_atual" id="id_atual" required>
            <option value="">Escolha uma sala</option>
            {{#each salas}}
                <option value="{{this.id}}">{{this.numero}}</option>
            {{/each}}
            </select>

            <label for="numero">NÃºmero da Sala:</label>
            <input type="number" id="numero" name="numero" min="1">

            <label for="capacidade">Capacidade:</label>
            <input type="number" id="capacidade" name="capacidade" min="1">

            <label for="cinema_id">Selecione o Cinema:</label>
            <select name="cinema_id" id="cinema_id" required>
            <option value="">Escolha um cinema</option>
            {{#each cinemas}}
                <option value="{{this.id}}">{{this.nome}}</option>
            {{/each}}
            </select>
            <br>
            <button type="submit">Atualizar Sala</button>
        </form>
        {{#if success_msg}}
            <div style="color: green; font-weight: bold;">
                {{success_msg}}
                <br><br><br>
            </div>
        {{/if}}

        {{#if error_msg}}
            <div style="color: red; font-weight: bold;">
                {{error_msg}}
                <br><br><br>
            </div>
        {{/if}}
    </div>
</body>
