<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciar Cinemas</title>
    <link rel="stylesheet" type="text/css" href="css/listar.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <style>
            h1{
                color: white;
            }

            .cinema-table {
                align-self: center;
                color: white;
                margin: 0 auto;
                width: 60%; 
                border: 1px white;
            }

        </style>
    </head>
    <body>
        <div class="container">
            <h1>Gerenciar Cinemas</h1>
            <br>
            <table class="cinema-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Local</th>
                        <th>Capacidade</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cinemas}}
                        <tr>
                            <td>{{ this.id }}</td>
                            <td>{{ this.nome }}</td>
                            <td>{{ this.local }}</td>
                            <td>{{ this.capacidade }}</td>
                            <td></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if success_msg}}
                <div style="color: green; font-weight: bold;">
                    {{success_msg}}
                    <br><br><br>
                </div>
            {{/if}}

            {{#if error_msg}}
                <div style="color: red; font-weight: bold;">
                    {{error_msg}}
                    <br><br><br>
                </div>
            {{/if}}
            <br>
            <a href="/adicionar_cinema" class="button">Adicionar Cinema</a>
            <a href="/atualizar_cinema" class="button">Editar</a>
            <a href="/deletar_cinema" class="button" onclick="return confirm('Tem certeza que deseja excluir este cinema?');">Excluir</a>
            <a href="/perfil" class="button">Voltar para o perfil</a>
        </div>
    </body>
</html>
