<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar Cinema</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/adicionar_filme.css">
</head>
<body>
    <div class="container">
        <h1>Adicionar Cinema</h1>
        <form action="/adicionar_cinema" method="POST">
            <div class="form-group">
                <label for="nome">Nome do Cinema:</label>
                <input type="text" id="nome" name="nome" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="local">Localização:</label>
                <input type="text" id="local" name="local" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="capacidade">Capacidade:</label>
                <input type="number" id="capacidade" name="capacidade" class="form-control" required min="1" placeholder="Números (por exemplo: 160, 200...)">
            </div>
            <br>
            <button type="submit" class="button">Adicionar Cinema</button>
        </form>
        <br><br>
        <a href="/perfil" class="button">Voltar para o perfil</a>
        {{#if success_msg}}
            <div style="color: green; font-weight: bold;">
                {{success_msg}}
                <br><br><br>
            </div>
        {{/if}}

        {{#if error_msg}}
            <div style="color: red; font-weight: bold;">
                {{error_msg}}
                <br><br><br>
            </div>
        {{/if}}
        </div>
    </body>
</html>
