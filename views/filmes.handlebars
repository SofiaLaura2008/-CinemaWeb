<head>
    <link rel="stylesheet" type="text/css" href="css/listar.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        h1 {
            color: white;
        }

        .card-body {
            background-color: #4b0082; /* Cor roxa mais escura */
        }

        .card {
            width: 12rem; /* Menor largura do card */
        }
    </style>
</head>
<body>
        <div class="container">
            <h1>Filmes</h1>
            <div class="card-container">
                {{#each filmes}}
                    <div class="card">
                        {{#if this.foto}}
                            <img src="{{this.foto}}" alt="Foto do filme" width="100">
                        {{else}}
                            Sem imagem
                        {{/if}}
                        <div class="card-body">
                            <h4 class="card-title">{{ this.titulo }}</h5>
                            <p class="card-text">
                                <strong>Duração:</strong> {{ this.duracao }} min<br>
                                <strong>Classificação:</strong> {{ this.classificacao }}<br>
                                <strong>Gênero:</strong> {{ this.genero }}<br>
                                <strong>Lançamento:</strong> {{ this.data_lancamento_formatada }}
                            </p>
                        </div>
                    </div>
                {{/each}}
            </div>
            {{#if usuario.is_admin}} 
                <a href="/adicionar_filmes" class="button">Adicionar Novo Filme</a>
                <a href="/atualizar_filmes" class="button">Atualizar</a>
                <a href="/deletar_filme" class="button">Deletar</a>
            {{/if}}
            <a href="/logado" class="button">Voltar para a página inicial</a>
            
            {{#if success_msg}}
                <div style="color: green; font-weight: bold;">
                    <br><br>
                    {{success_msg}}
                </div>
            {{/if}}
            {{#if error_msg}}
                <div style="color: red; font-weight: bold;">
                    <br><br>
                    {{error_msg}}
                </div>
            {{/if}}
        </div>
    </body>