<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Atualizar Alimento</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">    
    <link rel="stylesheet" href="css/adicionar_filme.css">
</head>
<body>
    <div class="container">
        <h1>Atualizar Alimento</h1>
        {{#if error_msg}}
            <div class="error_msg">{{error_msg}}</div>
        {{/if}}
        {{#if success_msg}}
            <div class="success_msg">{{success_msg}}</div>
        {{/if}}
        <form action="/atualizar_alimento" method="POST">
            <label for="id_atual">Selecione o Alimento:</label>
            <select id="id_atual" name="id_atual" required>
                <option value="">-- Selecione um alimento --</option>
                {{#each alimentos}}
                    <option value="{{this.id}}">{{this.nome}}</option>
                {{/each}}
            </select>
            
            <label for="nome">Novo Nome:</label>
            <input type="text" id="nome" name="nome" placeholder="Deixe em branco para manter o atual">
            
            <label for="preco">Novo Preço:</label>
            <input type="number" step="0.01" id="preco" name="preco" placeholder="Deixe em branco para manter o atual">
            
            <label for="quantidadeDisponível">Nova Quantidade Disponível:</label>
            <input type="number" id="quantidadeDisponível" name="quantidadeDisponível" placeholder="Deixe em branco para manter o atual">
            
            <label for="tipoAlimentos">Novo Tipo:</label>
            <select id="tipoAlimentos" name="tipoAlimentos">
                <option value="">-- Manter o atual --</option>
                <option value="Bebida">Bebida</option>
                <option value="Comida">Comida</option>
                <option value="Doce">Doce</option>
                <option value="Outro">Outro</option>
            </select>
            
            <button type="submit">Atualizar Alimento</button>
        </form>
        <a href="/alimentos" class="btn btn-secondary">Voltar</a>
        {{#if success_msg}}
            <div style="color: green; font-weight: bold;">
                {{success_msg}}
                <br><br><br>
            </div>
        {{/if}}

        {{#if error_msg}}
            <div style="color: red; font-weight: bold;">
                {{error_msg}}
                <br><br><br>
            </div>
        {{/if}}
    </div>
</body>
